@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
}

<div class="page-content--bge5">
	<div class="container">
		<div class="login-wrap">
			<div class="login-content">
				<div class="login-logo">
					<a href="#">
						<img src="~/lib/cool-admin/images/icon/logo.png" alt="CoolAdmin">
					</a>
				</div>
				<div class="login-form">
					<form action="" method="post">
						@*<div asp-validation-summary="All" class="text-danger"></div>*@
						<div class="form-group">
							<label asp-for="Input.Email"></label>
							<input asp-for="Input.Email" class="au-input au-input--full form-control" placeholder="Email">
							<span asp-validation-for="Input.Email" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="Input.Password">Password</label>
							<input asp-for="Input.Password" class="au-input au-input--full form-control" placeholder="Password">
							<span asp-validation-for="Input.Password" class="text-danger"></span>
						</div>
						<div class="login-checkbox">
							<label>
								<input type="checkbox" name="aggree">Agree the terms and policy
							</label>
						</div>
						<button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">register</button>
					</form>
					<div class="register-link">
						<p>
							Already have account?
							<a href="#">Sign In</a>
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
