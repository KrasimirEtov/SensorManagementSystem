@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
}
<div class="hold-transition register-page-center">
	<div class="register-box">
		<div class="card">
			<div class="card-body register-card-body">
				<p class="login-box-msg">Register a new membership</p>
				<p>Check email for activation link after registration</p>

				<form action="" method="post">
					<div asp-validation-summary="All" class="text-danger"></div>
					<div class="input-group mb-3">
						<input asp-for="Input.Email" type="email" class="form-control" placeholder="Email">
						<div class="input-group-append">
							<div class="input-group-text">
								<span class="fas fa-envelope"></span>
							</div>
							@*<span asp-validation-for="Input.Email" class="text-danger"></span>*@
						</div>
					</div>
					<div class="input-group mb-3">
						<input asp-for="Input.Password" type="password" class="form-control" placeholder="Password">
						<div class="input-group-append">
							<div class="input-group-text">
								<span class="fas fa-lock"></span>
							</div>
						</div>
						@*<span asp-validation-for="Input.Password" class="text-danger"></span>*@
					</div>
					<div class="row">
						<div class="col-8">
						</div>
						<!-- /.col -->
						<div class="col-4">
							<button type="submit" class="btn btn-primary btn-block">Register</button>
						</div>
						<!-- /.col -->
					</div>
				</form>

				<a asp-area="Identity" asp-page="/Account/Login" class="text-center">I already have a membership</a>
			</div>
			<!-- /.form-box -->
		</div><!-- /.card -->
	</div>
</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
