@page
@model LoginModel
@{
	ViewData["Title"] = "Sign in";
}

	<div class="login-wrap">
		<div class="login-content">
			<div class="login-logo">
				<a href="#">
					<img src="~/lib/cool-admin/images/icon/logo.png" alt="CoolAdmin">
				</a>
			</div>
			<div class="login-form">
				<form id="account" method="post">
					@*<div asp-validation-summary="All" class="text-danger"></div>*@
					<div class="form-group">
						<label asp-for="Input.Email"></label>
						<input asp-for="Input.Email" class="au-input au-input--full form-control" placeholder="Email" />
						<span asp-validation-for="Input.Email" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Input.Password"></label>
						<input asp-for="Input.Password" class="au-input au-input--full form-control" placeholder="Password" />
						<span asp-validation-for="Input.Password" class="text-danger"></span>
					</div>
					<div class="form-group">
						<div class="login-checkbox ">
							<label asp-for="Input.RememberMe">
								<input asp-for="Input.RememberMe" />
								@Html.DisplayNameFor(m => m.Input.RememberMe)
							</label>
						</div>
					</div>
					<div class="form-group">
						<button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Sign in</button>
					</div>
				</form>
				<div class="form-group">
					<div class="register-link">
						<p>
							Don't you have account?
							<a asp-area="Identity" asp-page="Account/Register">Sign Up Here</a>
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}