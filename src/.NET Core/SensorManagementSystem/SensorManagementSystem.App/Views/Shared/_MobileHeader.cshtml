<header class="header-mobile header-mobile-2 d-block d-lg-none">
	<div class="header-mobile__bar">
		<div class="container-fluid">
			<div class="header-mobile-inner">
				<a class="logo" asp-area="" asp-controller="Home" asp-action="Index">
					<img src="~/lib/cool-admin/images/icon/logo-white.png" alt="CoolAdmin" />
				</a>
				<button class="hamburger hamburger--slider" type="button">
					<span class="hamburger-box">
						<span class="hamburger-inner"></span>
					</span>
				</button>
			</div>
		</div>
	</div>
	<nav class="navbar-mobile">
		<div class="container-fluid">
			<ul class="navbar-mobile__list list-unstyled">
				@if (User.Identity.IsAuthenticated)
				{
					<li class="has-sub">
						<a class="js-arrow" asp-area="" asp-controller="SensorStore" asp-action="Index">
							<i class="fas fa-shopping-cart"></i>Sensors Store
						</a>
					</li>
					<li class="has-sub">
						<a class="js-arrow" href="#">
							<i class="fas fa-tachometer-alt"></i>My Sensors
						</a>
					</li>
					<li class="has-sub">
						<a class="js-arrow" href="#">
							<i class="fas fa-user"></i>About
						</a>
					</li>
					@if (User.IsInRole(Constants.AdminRoleName))
					{
						<li class="has-sub">
							<a class="js-arrow" href="#">
								<i class="fas fa-wrench"></i>Admin
							</a>
							<ul class="navbar-mobile-sub__list list-unstyled js-sub-list">
								<li>
									<a asp-area="@Constants.AdminAreaName" asp-controller="SensorStore" asp-action="Manage">
										Manage Store
									</a>
								</li>
								<li>
									<a href="button.html">Manage Users</a>
								</li>
							</ul>
						</li>
					}
				}
				else
				{
					<li class="has-sub">
						<a class="js-arrow" asp-area="Identity" asp-page="/Account/Register">
							<i class="fas fa-user-plus"></i>Register
						</a>
					</li>
					<li class="has-sub">
						<a class="js-arrow" asp-area="Identity" asp-page="/Account/Login">
							<i class="fas fa-user"></i>Login
						</a>
					</li>
				}
			</ul>
		</div>
	</nav>
</header>

@if (User.Identity.IsAuthenticated)
{
	<partial name="_MobileNavBar" />
}