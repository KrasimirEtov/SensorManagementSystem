@model List<SensorViewModel>
<div class="table-responsive table-responsive-data2">
	<table class="table table-data2">
		<thead>
			<tr>
				<th class="text-center">Measure Type</th>
				<th class="text-center">Measure Unit</th>
				<th class="text-center">Description</th>
				<th class="text-center">Polling Interval</th>
				<th class="text-center">Is Switch</th>
				<th class="text-center">Min Range Value</th>
				<th class="text-center">Max Range Value</th>
				<th class="text-center">Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr class="tr-shadow">
					<td class="text-center">@item.SensorProperty.MeasureType</td>
					<td class="text-center">
						<span class="block-email">@item.SensorProperty.MeasureUnit</span>
					</td>
					<td class="text-center">@item.Description</td>
					<td class="text-center">@item.PollingInterval</td>
					<td class="text-center">
						<span>@item.SensorProperty.IsSwitch</span>
					</td>
					<td class="text-center">@item.MinRangeValue</td>
					<td class="text-center">@item.MaxRangeValue</td>
					<td class="text-center">
						<div class="table-data-feature">
							<a class="item button pointer-cursor" data-toggle="tooltip" data-placement="top" title="Use">
								<i class="fas fa-plus"></i>
							</a>
							@if (User.IsInRole(Constants.AdminRoleName))
							{
								<a class="item button pointer-cursor" data-toggle="tooltip" data-placement="top" title="Edit">
									<i class="zmdi zmdi-edit"></i>
								</a>
								<a class="item button pointer-cursor" data-toggle="tooltip" data-placement="top" title="Delete">
									<i class="zmdi zmdi-delete"></i>
								</a>
							}
						</div>
					</td>
				</tr>
				<tr class="spacer"></tr>
			}
		</tbody>
	</table>
</div>